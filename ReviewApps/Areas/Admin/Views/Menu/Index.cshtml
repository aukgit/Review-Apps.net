@model IEnumerable<Navigation>

@{
    ViewBag.Title = "Navigation";
    string title = ViewBag.Title;
    string subtitle = ViewBag.Title;
}

@Html.SamePageLinkWithIcon(title, subtitle, "fa fa-sitemap")

<p class="left-button-stacks">
    <a href="@Url.Action("Create")" title="Create a new item." class="btn btn-warning create-save">Create <span class="glyphicon glyphicon-plus"></span></a>
</p>
<table class="bootstrap-table-do table table-hover" data-toggle="table" data-show-columns="true" data-search="true" data-show-refresh="true" data-show-toggle="true" data-show-export="true" data-pagination="true">
    <thead>
    <tr>
        <th data-field="UserName">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th data-field="ElementClasses">
            @Html.DisplayNameFor(model => model.ElementClasses)
        </th>
        <th data-field="ElementID">
            @Html.DisplayNameFor(model => model.ElementID)
        </th>
        <th></th>
    </tr>
    </thead>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElementClasses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElementID)
            </td>
            <td>
                @Html.ActionLink("Add Items", "Add", new {Controller = "NavItems", id = item.NavigationID}) |
                @Html.ActionLink("List Items", "List", new {Controller = "NavItems", id = item.NavigationID}) @Html.GetBadge(item.NavigationItems.Count())|
                @Html.ActionLink("Edit", "Edit", new {id = item.NavigationID}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.NavigationID}, new {onclick = "return confirm('Are you sure?')"})
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}