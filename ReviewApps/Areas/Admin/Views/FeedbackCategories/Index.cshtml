@model IEnumerable<FeedbackCategory>

@{
    ViewBag.Title = "Feedback Category";
    string title = ViewBag.Title;
    string subtitle = ViewBag.Title;
}

@Html.SamePageLinkWithIcon(title, subtitle, "glyphicon glyphicon-th-list")
<p class="right">
    <a href="@Url.Action("Create")" title="Create a new item." class="btn btn-warning create-save">Create <span class="glyphicon glyphicon-plus"></span></a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.FeedbackCategoryID}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.FeedbackCategoryID}, new {onclick = "return confirm('Are you sure?')"})
            </td>
        </tr>
    }

</table>