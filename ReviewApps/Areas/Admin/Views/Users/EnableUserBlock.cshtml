@model ReviewApps.Models.ViewModels.UserBlockViewModel
@{
    var title = "Enabling " + Model.UserName;
    ViewBag.Title = title;
    var subtitle = title;
    var controller = (string) ViewBag.controller;
    var viewName = "EnableUserBlock";
}

@Html.SamePageLinkWithIcon(title, subtitle, "fa  fa-edit")

<hr />
<h4 class="h4">Do you want to enable this @Model.UserName?</h4>
@using (Html.BeginForm(viewName, controller, FormMethod.Post, new {@class = "form-horizontal Create-@ViewBag.Title", role = "form"})) {
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        @Html.Partial("_SuccessMessage")
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.UserId)
        <div class="form-group">
            <div class="controls custom-checkbox">
                <div class="col-md-12">
                    @Html.CheckBox("SaySorry", false)
                    <label for="SaySorry">@Html.DisplayNameFor(m => m.SaySorry)</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" title="Back" class="btn btn-info dev-btn-back"><span class="glyphicon glyphicon-chevron-left"></span> No, back</a>
                    <div class="inline input-group-btn">
                        <button title="Enable" class="btn btn-success"><i class="fa fa-play-circle"></i> Yes, Enable</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}