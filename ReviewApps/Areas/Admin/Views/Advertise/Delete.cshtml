@using ReviewApps.Models.EntityModel.ExtenededWithCustomMethods
@model ReviewApps.Models.EntityModel.Gallery

@{
    ViewBag.Title = "Deleting " + Html.DisplayFor(model => model.Title);
    string title = ViewBag.Title;
    string subtitle = ViewBag.Title;
    var asking = "Are you sure you want to delete this?";
    var controller = (string) ViewBag.controller;
    var viewName = "Delete";
    var token = Html.AntiForgeryToken();
}
@Html.SamePageLinkWithIcon(title, subtitle, "fa fa-trash")
<hr />
<h3 class="h4">@asking</h3>
<div class="form-horizontal">
    @using (Html.BeginForm()) {
        @token
        <div class="form-group">
            <div class="col-md-11">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" title="Back" class="btn btn-info dev-btn-back"><span class="glyphicon glyphicon-chevron-left"></span> No, back</a>
                    <div class="inline input-group-btn">
                        <button class="btn btn-danger" title="Remove this record permanently.."><i class="glyphicon glyphicon-remove"></i> Yes, delete permanently</button>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <a href="@Url.Action("Edit", new {id = Model.GalleryID})" title="Edit" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            </div>
        </div>
        <table class="table table-hover top-margin-space">
            <thead>
            <tr>
                <th>Properties</th>
                <th></th>
                <th>Values</th>
            </tr>
            </thead>
            <tbody>

            @Html.HiddenFor(model => model.GalleryID)

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.UploadGuid)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.UploadGuid)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Sequence)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Sequence)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Title)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Title)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Subtitle)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Subtitle)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.GalleryCategory.CategoryName)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.GalleryCategory.CategoryName)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    Image View
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.ImageFromAbsolutePath(@Model.GetHtppUrl(), @Model.Title)
                </td>
            </tr>

            </tbody>
        </table>
        <div class="image">
            @{
                var imgSrc = Html.UploadedImageSrc("Advertise/", Model);
            }
            <img src="@imgSrc" alt="@Model.Title" />
        </div>
        <div class="form-group">
            <div class="col-md-11">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" title="Back" class="btn btn-info dev-btn-back"><span class="glyphicon glyphicon-chevron-left"></span> Back</a>
                    <div class="inline input-group-btn">
                        <button class="btn btn-danger" title="Remove this record permanently.."><i class="glyphicon glyphicon-remove"></i> Delete permanently</button>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <a href="@Url.Action("Edit", new {id = Model.GalleryID})" title="Edit" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            </div>
        </div>
    }
</div>